<%= render 'shared/errors', obj: @user%>
<h1 align="center">Signup for Alpha Blog</h1>
<div class="row">
  <div class="col-sm-12">
    <%= form_for(@user, html: {class: 'form-horizontal', role: 'form'}) do |f|%>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :username%>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :username, class: 'form-control', placeholder: 'Enter username', autofocus: true%>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-10">
          <%= f.email_field :email, placeholder: 'Enter email',class:'form-control'%>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :password %>
        </div>
        <div class="col-sm-10">
          <%= f.password_field :password, placeholder: 'Enter password',class:'form-control'%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Sign Up', class: 'btn btn-primary btn-lg'%>
        </div>
      </div>
    <%end%>
    <div class="col-sm-5 col-sm-offset-5">
      <%= link_to 'cancel and return to article listing', articles_path %>
    </div>
  </div>
</div>



